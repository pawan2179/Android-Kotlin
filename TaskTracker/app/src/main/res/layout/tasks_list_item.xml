<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Title"
            android:textSize="24sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"
            android:maxWidth="200dp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/tvRemarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Remarks"
            android:maxWidth="200dp"
            android:textSize="16sp"
            android:layout_below="@+id/tvTitle"
            android:layout_alignLeft="@id/tvTitle"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="3 Hours 30 Minutes"
            android:textSize="16sp"
            android:layout_below="@+id/tvRemarks"
            android:layout_alignLeft="@+id/tvTitle"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvPriority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="High"
            android:textSize="16sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:gravity="bottom"
            android:layout_alignBottom="@+id/tvTitle"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            app:cornerRadius="50dp"
            android:textSize="10sp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tvPriority"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/tvDuration"
            android:layout_alignRight="@id/tvPriority"
            app:backgroundTint="@color/start_green"
            android:visibility="gone"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pause"
            app:cornerRadius="50dp"
            android:textSize="10sp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tvPriority"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/tvDuration"
            android:layout_alignRight="@id/tvPriority"
            app:backgroundTint="@color/amber_700"/>


    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>